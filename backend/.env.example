# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ortam_docs?schema=public"

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Integration (for document generation)
OPENAI_API_KEY=your-openai-api-key-here
# or
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# CORS
FRONTEND_URL=http://localhost:5173

# Optional admin bootstrap (creates the user if it does not exist)
SEED_ADMIN_EMAIL=
SEED_ADMIN_PASSWORD=
# Optional - defaults shown below
# SEED_ADMIN_NAME=System Administrator
# SEED_ADMIN_ROLE=ADMIN
# Set to true temporarily to refresh password/name/role for the seeded admin
# SEED_ADMIN_FORCE=false
